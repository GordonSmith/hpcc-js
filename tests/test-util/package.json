{
  "private": true,
  "name": "@hpcc-js/test-util",
  "dependencies": {
    "@hpcc-js/core": "^0.0.0",
    "@hpcc-js/util": "^2.7.2",
    "chai": "4.2.0",
    "es6-promise": "4.2.8",
    "mocha": "5.2.0"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/dts-bundle": "0.0.31",
    "@types/glob": "5.0.35",
    "@types/mocha": "5.2.7",
    "css-loader": "3.0.0",
    "dts-bundle": "0.7.3",
    "file-loader": "1.1.5",
    "mocha-chrome": "2.0.0",
    "rimraf": "2.6.3",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.1",
    "typescript": "3.5.2",
    "webpack": "4.34.0",
    "webpack-cli": "3.3.4"
  },
  "scripts": {
    "clean": "rimraf lib* types dist tmp *.tsbuildinfo",
    "compile-es6": "tsc --module es6 --outDir ./lib-es6",
    "compile-es6-watch": "npm run compile-es6 -- -w",
    "compile-umd": "tsc --module umd --outDir ./lib-umd",
    "bundle": "webpack",
    "build": "npm run compile-es6 && npm run compile-umd && npm run bundle",
    "test": "npm run test:node && npm run test:chrome",
    "test:node": "./node_modules/.bin/mocha lib-umd/index.node.spec.js --reporter spec",
    "test:chrome": "mocha-chrome --chrome-flags \"[\\\"--allow-file-access-from-files\\\"]\" ./test.html"
  }
}